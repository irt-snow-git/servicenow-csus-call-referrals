					<input class="form-control input-fat" ng-model="searchText"/>
					<form name="sortForm">
						<h3> Sort By </h3>
						<p>
							<input id="radio_sort_pop" type="radio" ng-model="customOrder" value="popularity"/>
							<label for="radio_sort_pop">Popularity</label>
						</p>
						<p>
							<input id="radio_sort_name" type="radio" ng-model="customOrder" value="name"/>
							<label for="radio_sort_name">Name</label>
						</p>
					</form>
				</div>
			</div>
			<div class="panel panel-shadow col-sm-8 col-sm-offset-1">
				<div class="center-block col-sm-12">
					<div ng-repeat="dept in depts | orderBy: customOrder | filter:searchText track by $index" style="padding:30px">
						<div class="chunk col-sm-12">
							<button id="{{dept.name}}_btn" type="button" ng-class="buttonCSS" 
									style="padding: 10px" ng-click="submit(dept.value)">
								{{dept.name}}
							</button>
							<button ng-class="pinCSS" ng-click="pin(dept)" >
								<span class="glyphicon glyphicon-heart-empty" aria-hidden="true">
								</span>
							</button>
							<button ng-class="pinCSS" ng-click="pin(dept)" >
								<span class="glyphicon glyphicon-earphone" aria-hidden="true">
								</span>
							</button>
						</div>
					</div>
				</div>
			</div>
		
			
		</div>
	</div>
</div>

