        <html><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
<script language="javascript" src="https://code.angularjs.org/1.4.0-beta.4/angular.js" />
<script src="x_casus_callref.angular_controller.jsdbx"></script>
<style>
	
.btn-pin {
	background-color: #dcedc8;
}
.btn-pin.pinned {
	box-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
}

.btn-grey {
	background-color: #dcedc8  !important;
	box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2);
}
	
.btn-grey:hover {
	background-color: #f1f8e9  !important; 
}

</style>
	
<div ng-app="myApp">
	
	<div class="container full-height" id="main-div">
		<div ng-controller="CallReferralsController">
			<div class="center-block" style="max-width:500px">
				<div ng-repeat="dept in depts | orderBy: 'name' track by $index" style="padding:30px">
					<button ng-class="pinCSS" ng-click="pin(dept)" >&#x1F4CC;</button>
					<button id="{{dept.name}}_btn" type="button" ng-class="buttonCSS" style="padding: 10px" ng-click="submit(dept.value)">
						{{dept.name}}
					</button>
				</div>
			</div>
			
		</div>
	</div>
</div>

